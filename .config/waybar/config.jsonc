// -*- mode: jsonc -*-
{
  // "layer": "top", // Waybar at top layer
  // "position": "bottom", // Waybar position (top|bottom|left|right)
  "height": 30, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 0, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": [
    "hyprland/window"
    //,"hyprland/submap"
  ],
  "modules-center": ["hyprland/workspaces", "custom/spacer", "mpris"],
  "modules-right": [
    //"mpd",
    //"idle_inhibitor",
    "custom/inhibit",
    //"custom/volume",
    "wireplumber",
    //"network",
    //"bluetooth",
    //"power-profiles-daemon",
    "cpu",
    "memory",
    //"temperature",
    //"backlight",
    //"keyboard-state",
    //"hyprland/language",
    "battery",
    "clock",
    "custom/rotation-lock",
    "custom/vkeyboard",
    "tray",
    "custom/power"
  ],
  // Add the definition for the new custom spacer module (usually near the bottom)
  "custom/spacer": {
    "format": " | ", // A single space or empty string
    "tooltip": false
  },
  "hyprland/window": {
    "format": "{title}",
    "format-floating": "Ôâç {title}",
    "format-fullscreen": "ÔÅ• {title}",
    "rewrite": {
        // Keep this empty for a moment to test the state icons
        // Or use it to shorten long titles (like browsers)
        "(.*) ‚Äî Mozilla Firefox": "Û∞àπ $1",
        "(.*) - Brave": "Û∞ñü $1"
    },
    "separate-outputs": true,
    "icon": true
  },
  "hyprland/workspaces": {
    //"all-outputs": false,
    //"persistent-workspaces": {
    //  "1": [],
    //  "2": [],
    //  "3": [],
    //  "4": [],
    //  "5": []
    //},
    "show-special": true
  },
  "hyprland/submap": {
    "format": "‚úåÔ∏è {}",
    "max-length": 8,
    "tooltip": true
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "sway/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": ["", "Ôãí"],
    "tooltip": true,
    "tooltip-format": "{app}: {title}"
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
    "format-disconnected": "Disconnected ÔÄÅ",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
    "unknown-tag": "N/A",
    "interval": 5,
    "consume-icons": {
      "on": "ÔÉÑ "
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
      "on": "ÔÅ¥ "
    },
    "repeat-icons": {
      "on": "ÔÄû "
    },
    "single-icons": {
      "on": "ÔÄû1 "
    },
    "state-icons": {
      "paused": "ÔÅå",
      "playing": "ÔÅã"
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    },
    "tooltip-format-activated": "ÔÅÆ Idle Inhibitor: Active\nSystem will not sleep",
    "tooltip-format-deactivated": "ÔÅ∞ Idle Inhibitor: Inactive\nSystem sleep enabled"
  },
  "custom/inhibit": {
    "format": "{icon}",
    "format-icons": {
        "activated": "‚òï",  
        "deactivated": "üí§" 
    },
    "return-type": "json",
    "exec": "if pgrep -x -f 'systemd-inhibit --what=idle --who=lobuche --why=manual-idle-inhibitor --mode=block sleep infinity' > /dev/null; then echo '{\"alt\": \"activated\", \"tooltip\": \"Inhibitor Active\"}'; else echo '{\"alt\": \"deactivated\", \"tooltip\": \"Inhibitor Inactive\"}'; fi",
    "on-click": "~/.config/hypr/scripts/toggle_inhibit.sh",
    "interval": "once",
    "signal": 10
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "cpu": {
    "format": "{usage}% Ôíº",
    "tooltip": true,
    "states": {
      "warning": 50, // Waybar applies the class ".warning" when usage hits 50%
      "critical": 85 // Waybar applies the class ".critical" when usage hits 85%
    },
    "on-click":  "pkill -fx 'alacritty --class btop-float -e btop' || alacritty --class btop-float -e btop"
  },
  "memory": {
    "format": "{}% ÔÉâ",
    "tooltip": true,
    "tooltip-format": "{used:0.1f}GiB used",
    "states": {
      "warning": 50, // Waybar applies the class ".warning" when usage hits 50%
      "critical": 85 // Waybar applies the class ".critical" when usage hits 85%
    },
    "on-click": "pkill -fx 'alacritty --class btop-float -e btop' || alacritty --class btop-float -e btop"
  },
  "temperature": {
    "critical-threshold": 80,
    "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": ["Óº™", "Ôãâ"],
    "tooltip": true,
    "on-click-right": "alacritty -e sensors"
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
    "tooltip": true
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% Ôá¶",
    //"format-plugged": "{capacity}% Ôá¶",
    // "format-alt": "{time} {icon}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
    "tooltip": true
  } /*
    "mpris": {
        "format": "{} {title}", // Shows icon and title when playing
        "format-paused": "{} [Paused]", // Shows icon and 'Paused' when paused
        "format-stopped": "Idle", // Shows 'Idle' when no players are running
        "format-icons": {
            "Playing": "‚ñ∂",
            "Paused": "‚è∏",
            "Stopped": "‚èπ"
        },
        // The player name replaces the first {} in the format string
        "format-player": "{player_icon}",
        "player-icons": {
            "spotify": "ÔÜº", // Font Awesome icon for Spotify
            "mpv": "üé¨",
            "default": "üéµ"
        },
        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous",
        // Set max length to prevent long titles from breaking the bar
        "max-length": 30
    },*/,
  "mpris": {
    // 1. Combine player icon, status icon, and title in one format
    "format": "{player_icon} - {status_icon} {title}",
    //"format-paused": "{player_icon} {status_icon} {title}", // Keep title visible when paused
    "format-stopped": "Idle",

    // 2. Clearer status icons
    "status-icons": {
      "playing": "ÔÖÑ",
      "paused": "Ôäã",
      "stopped": "Ôäç"
    },

    // 3. Keep player icons but ensure "player-icons" is referenced correctly
    "format-player": "{player_icon}",
    "player-icons": {
      "spotify": "ÔÜº",
      "brave.instance2": "Û∞äØ",
      "vlc": "Û∞ïº",
      "mpv": "Û∞ä∫", // Switched to a monitor/TV icon for MPV for distinction
      "default": "Ó∞õ" // Changed to Music Notes
    },

    // 4. Increase max length slightly for better readability of song names
    "max-length": 40,

    // 5. Keep functional controls (On-click is crucial)
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous"
  },
  // "battery#bat2": {
  //     "bat": "BAT0"
  // },
  "power-profiles-daemon": {
    "format": "{icon}",
    //"tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "Û∞âÅ",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "format-wifi": "{essid} ({signalStrength}%) Ôá´",
    //"format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
    //"format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "Disconnected Û∞ñ™",
    //"format-alt": "{ifname}: {ipaddr}/{cidr}",
    "on-click": "nmcli device wifi list | tail -n +2 | wofi --dmenu | awk '{print $1}' | xargs nmcli device wifi connect"
  },
  "bluetooth": {
    "format": "Û∞ÇØ",
    "format-disabled": "Û∞Ç≤",
    "format-connected": "Û∞Ç± {num_connections}",
    "format-connected-battery": "Û∞Ç± {device_alias} {device_battery_percentage}%",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "blueman-manager",
    "on-click-right": "rfkill toggle bluetooth"
  },
  "custom/volume": {
    "format": "Vol:", // Displays 'Vol: 75'
    "exec": "pamixer --get-volume-human", // Simple command to get percentage
    "interval": 1, // Update every second
    "on-click": "pamixer --toggle-mute",
    "on-click-right": "pavucontrol"
  },
  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "Û∞ñÅ",
    "format-icons": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
    "on-click": "pamixer --toggle-mute",
    "on-click-right": "pavucontrol"
  },
  "wpulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö© {format_source}",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "on-click": "pavucontrol"
  },
  "custom/media": {
    "format": "{icon} {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
  },
  "custom/rotation-lock":{
    "exec": "~/scripts/rotation-controller.sh",
    "return-type": "json",
    "interval": 2,            // Check status every 2 seconds
    "format": "{}",           // Just show the icon
    "on-click": "~/scripts/rotation-controller.sh --toggle; pkill -SIGRTMIN+8 waybar",
    "signal": 8,              // Allows instant update on click
    "tooltip": true
  },
  "custom/vkeyboard": {
    "format": "ÔÑú ",
    "on-click": "~/scripts/toggle-vkeyboard.sh",
    "tooltip": false
  },
  "custom/power": {
    "format": "‚èª ",
    "tooltip": false,
    "on-click": "wlogout -n --buttons-per-row 2 -l ~/.config/wlogout/layout -C ~/.config/wlogout/style.css -c 20 -r 20",
    "class": "power-button"
  }
}
